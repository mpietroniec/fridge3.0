<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".activities.DetailActivity">

    <TextView
        android:id="@+id/name_input_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:hint="@string/title"
        android:textColor="#253AB8"
        android:textSize="20sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/amount_input_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@+id/name_input_update"
        android:layout_marginTop="20dp"
        android:hint="Ilość"
        android:textColor="#253AB8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/amount_input_update"
        android:layout_marginTop="200dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/update_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginEnd="5dp"
            android:background="@drawable/custom_button"
            android:text="zaktualizuj"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/delete_button"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginStart="5dp"
            android:background="@drawable/custom_button"
            android:text="usuń"
            android:textColor="#FFFFFF"/>
    </LinearLayout>


</RelativeLayout>