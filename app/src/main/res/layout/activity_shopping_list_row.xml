<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shopping_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/shopping_list_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="20sp"
            android:textColor="#253AB8"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shopping_list_amount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:layout_toStartOf="@+id/shopping_list_checkbox"
            android:text="_1"
            android:textColor="#253AB8"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/shopping_list_shop_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shopping_list_name_txt"
            android:layout_marginTop="5dp"
            android:text="shop"
            android:textColor="#253AB8"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/shopping_list_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:buttonTint="#253AB8"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
